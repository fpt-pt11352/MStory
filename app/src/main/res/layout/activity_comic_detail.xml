<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_margin="10dp"
                android:layout_weight="5"
                android:src="@mipmap/bia" />

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="5">

                <!--name-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/txv_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="No Name"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </TableRow>
                <!--author-->
                <TableRow>

                    <TextView
                        style="@style/DetailText"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_column="1"
                        android:text="Tác giả"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:gravity="center_vertical"
                        android:text=":" />

                    <TextView
                        android:id="@+id/txv_author"
                        style="@style/DetailText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:layout_gravity="center_vertical"
                        android:text="No One" />
                </TableRow>
                <!--kind-->
                <TableRow>

                    <TextView
                        style="@style/DetailText"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_column="1"
                        android:text="Thể loại"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:gravity="center_vertical"
                        android:text=":" />

                    <TextView
                        android:id="@+id/txv_kind"
                        style="@style/DetailText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:layout_gravity="center_vertical"
                        android:text="No Kind" />
                </TableRow>
                <!--chapter-->
                <TableRow>

                    <TextView
                        style="@style/DetailText"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_column="1"
                        android:text="Số chap"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:gravity="center_vertical"
                        android:text=":" />

                    <TextView
                        android:id="@+id/txv_chapters"
                        style="@style/DetailText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_column="3"
                        android:text="0" />
                </TableRow>
                <!--views-->
                <TableRow>

                    <TextView
                        style="@style/DetailText"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_column="1"
                        android:text="Lượt đọc "
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:gravity="center_vertical"
                        android:text=":" />

                    <TextView
                        android:id="@+id/txv_views"
                        style="@style/DetailText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_column="3"
                        android:text="0" />
                </TableRow>
                <!--read button-->
                <TableRow
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <Button
                        android:id="@+id/btnDoctruyen"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_import_contacts_black_24dp"
                        android:text="Đọc" />
                </TableRow>
                <!--like share comment-->
                <TableRow>

                </TableRow>

            </TableLayout>

        </LinearLayout>
        <com.facebook.share.widget.LikeView
            android:id="@+id/likeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />
    </LinearLayout>




</ScrollView>
