<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:weightSum="11">

                    <ImageView
                        android:id="@+id/imv_cover"
                        android:layout_width="0dp"
                        android:layout_height="210dp"
                        android:layout_margin="4dp"
                        android:layout_weight="5"
                        android:src="@drawable/loading" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="6"
                        android:orientation="vertical">

                        <!--name-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txv_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="No Name"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <!--author-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="15">

                            <TextView
                                style="@style/DetailText"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:text="Tác giả"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="5dp"
                                android:layout_height="25dp"
                                android:gravity="center_vertical"
                                android:text=":" />

                            <TextView
                                android:id="@+id/txv_author"
                                style="@style/DetailText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="10"
                                android:text="No One" />
                        </LinearLayout>
                        <!--kind-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="15">

                            <TextView
                                style="@style/DetailText"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:text="Thể loài "
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="5dp"
                                android:layout_height="25dp"
                                android:gravity="center_vertical"
                                android:text=":" />

                            <TextView
                                android:id="@+id/txv_kinds"
                                style="@style/DetailText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="No Kind"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <!--chapter-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="15">

                            <TextView
                                style="@style/DetailText"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:text="Số chap "
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="5dp"
                                android:layout_height="20dp"
                                android:gravity="center_vertical"
                                android:text=":" />

                            <TextView
                                android:id="@+id/txv_chapter"
                                style="@style/DetailText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="9"
                                android:text="0" />
                        </LinearLayout>
                        <!--views-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="15">

                            <TextView
                                style="@style/DetailText"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:text="Lượt đọc "
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="5dp"
                                android:layout_height="20dp"
                                android:gravity="center_vertical"
                                android:text=":" />

                            <TextView
                                android:id="@+id/txv_views"
                                style="@style/DetailText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="9"
                                android:text="0" />
                        </LinearLayout>
                        <!--read button-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp">

                            <Button
                                android:id="@+id/btnDoctruyen"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/ic_import_contacts_black_24dp"
                                android:text="Đọc" />
                        </LinearLayout>
                        <!--like share comment-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">

                            <com.facebook.share.widget.LikeView
                                android:id="@+id/likeView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <com.facebook.login.widget.LoginButton
                                android:id="@+id/login"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></com.facebook.login.widget.LoginButton>

                            <Button
                                android:id="@+id/sendComment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="send test comment" />

                            <Button
                                android:id="@+id/share"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Share" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:paddingBottom="22dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:id="@+id/txv_readMoreTop"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Đọc thêm"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txv_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:singleLine="false"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txv_readMoreBottom"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Đọc thêm"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>



</FrameLayout>
